{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "auto: git fetch on folder open",
      "type": "shell",
      "command": "git fetch --all --prune",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "never",
        "panel": "dedicated",
        "clear": false
      }
    }
  ]
}


